<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bhavya.fishtry1.MainActivity"
    android:background="@drawable/aq1"
    tools:showIn="@layout/activity_main">

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/gif_file"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/fish" />

    <TextView
        android:text="@string/score"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/text" />

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/gif_file"
        android:id="@+id/fish2"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/text"
        android:layout_toStartOf="@+id/text" />

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/gif_file"
        android:id="@+id/fish3"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/fish"
        android:layout_alignLeft="@+id/fish2"
        android:layout_alignStart="@+id/fish2" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.bhavya.fishtry1.Winningmessage"
        android:visibility="gone"
        android:id="@+id/fragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!---
        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="com.example.bhavya.fishtry1.playagainfrag"
            android:id="@+id/fragment3" />
            -->

</RelativeLayout>
